<% layout('layouts/boilerplate') -%>

<div class="row mb-4">
  <div class="col-6 offset-3">
    <div class="card">
      <img src="<%= camp.image %>" class="card-img-top"  alt="..." />
      <div class="card-body">
        <h1 class="card-title"><%= camp.title %></h1>
        <p class="card-text"><%= camp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= camp.location %></li>
        <li class="list-group-item">$<%= camp.price %></li>
      </ul>
      <div class="card-body d-flex gap-2">
        <a href="/campgrounds/<%= camp._id %>/edit" class="btn btn-warning"
          >Edit</a
        >
        <form
          action="/campgrounds/<%= camp._id %>?_method=Delete"
          method="post"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer">
        <a href="/campgrounds"
        
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-arrow-left-short"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5"
          /></svg
        >All listings</a
        >      </div>
    </div>
  </div>
</div>

