<% layout('layouts/boilerplate') -%>
  <h1 class="text-center text-3xl font-medium">All Camps</h1>

  <a href="/campgrounds/new"   >Add new</a>
 
    <% for( let camp of campgrounds) { %>
      <div class="card my-3   ">
      
        <div class="row">
          <div class="col-md-4">
            <img src="<%= camp.image %>"  alt="<%= camp.title %>" class="img-fluid">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title"><%= camp.title %></h3>
              <p class="card-text"><%= camp.description %></p>
              <p class="card-text"><small class="text-muted"><%= camp.location %></small></p>
              <a href="/campgrounds/<%= camp._id %>" class="card-link">View more</a>
            </div>
          </div>
        </div>

      </div>
    <% } %>
  